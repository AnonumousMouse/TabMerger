{
  "manifest_version": 2,
  "name": "TabMerger",
  "version": "0.1.0",
  "description": "Merges your tabs into one location to save memory usage and increase your productivity.",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs", "activeTab", "contextMenus"],

  "icons": {
    "512": "images/logo512.png",
    "128": "images/logo128.png",
    "48": "images/logo48.png",
    "16": "images/logo16.png"
  },

  "browser_action": {
    "default_icon": "images/logo512.png",
    "default_title": "Merge your tabs into groups"
  },

  "options_page": "options.html"
}
