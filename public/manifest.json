{
  "manifest_version": 2,
  "version": "1.2.0",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": ["tabs", "contextMenus"],

  "icons": {
    "128": "images/logo128.png",
    "48": "images/logo48.png",
    "16": "images/logo16.png"
  },

  "browser_action": {
    "default_icon": "images/logo128.png",
    "default_title": "Merge your tabs into groups"
  },

  "commands": {
    "open-tabmerger": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Open/Navigate to TabMerger (without merging)"
    },
    "merge-all-menu": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Merge ALL Tabs"
    },
    "merge-left-menu": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Merge LEFT Tabs"
    },
    "merge-right-menu": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Merge RIGHT Tabs"
    }
  }
}
