{
  "manifest_version": 2,
  "name": "TabMerger",
  "version": "0.1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs", "http://*/", "https://*/"],

  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "Sort your tabs into tab groups"
  },

  "externally_connectable": {
    "matches": ["http://localhost:3000/", "https://tabmerger.netlify.app/"]
  }
}
