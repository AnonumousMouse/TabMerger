{
  "manifest_version": 2,
  "name": "Tabify",
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],

  "browser_action": {
    "default_icon": "tab.PNG",
    "default_title": "Sort your tabs into tab groups"
    // "default_popup": "popup.html"
  }
}
