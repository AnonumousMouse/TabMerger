{
  "manifest_version": 2,
  "name": "Tabify",
  "version": "0.1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["tabs", "http://*/"],

  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "Sort your tabs into tab groups"
  }
}
