{
  "name": "tabmerger",
  "version": "1.5.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.5.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^3.11.0",
    "react-scripts": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@testing-library/react": "^11.2.2",
    "jsdoc": "^3.6.6",
    "zip-a-folder": "0.0.12"
  },
  "scripts": {
    "docs": "./node_modules/.bin/jsdoc -c jsdoc.config.json",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-firefox": "node helpers/build_helper.js firefox && npm run build && node helpers/zip_helper.js firefox",
    "build-chrome": "node helpers/build_helper.js chrome && npm run build && node helpers/zip_helper.js chrome",
    "build-all": "npm run build-firefox && npm run build-chrome",
    "eject": "react-scripts eject",
    "test": "jest --coverage",
    "test:watch": "npm run test --watchAll",
    "test-tab": "npm run test -- ./__tests__/Tab_spec/",
    "test-group": "npm run test -- ./__tests__/Group_spec/",
    "test-app": "npm run test -- ./__tests__/App_spec/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
